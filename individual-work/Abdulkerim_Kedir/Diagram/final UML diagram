@startuml

class Vehicle {
  - id: String
  - model: String
  - brand: String
  - type: String
  - status: String
  - location: String
  + updateStatus()
  + scheduleMaintenance()
}

class Customer {
  - id: String
  - name: String
  - email: String
  - phone: String
  - licenseNumber: String
  + createProfile()
  + updateProfile()
}

class Rental {
  - id: String
  - rentalDate: Date
  - returnDate: Date
  - totalCost: double
  + createRental()
  + cancelRental()
  + calculateCost()
}

class Payment {
  - id: String
  - amount: double
  - method: String
  - status: String
  + processPayment()
  + refundPayment()
}

class Service {
  - id: String
  - vehicleId: String
  - serviceDate: Date
  - details: String
  + logService()
}

class GPS {
  - vehicleId: String
  - location: String
  - speed: double
  - fuelLevel: double
  + updateLocation()
  + getLocationHistory()
}

Customer "1" --> "*" Rental
Rental "*" --> "1" Vehicle
Rental "1" --> "1" Payment
Vehicle "1" --> "*" Service
Vehicle "1" --> "1" GPS

@enduml

